generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  key   String @id
  value String

  @@map("sessions")
}

model Group {
  id       String        @id
  user     User[]
  question Question[]  @relation("question_to_group")

  @@map("groups")
}

model User {
  id           String           @id
  group_id     String
  name         String
  created_date DateTime      @default(now())
  user_folder  String?
  photo_folder PhotoFolder[]

  group Group @relation(fields: [group_id], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("users")
}

model PhotoFolder {
  folder_id     String   @id
  user_id       String
  creation_date DateTime @default(now())
  user          User     @relation(fields: [user_id], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("photo_folder")
}

model Question {
  id       Int     @id @default(autoincrement())
  name     String
  text     String
  require  Boolean @default(false)

  group Group[] @relation("question_to_group")

  @@map("question")
}
